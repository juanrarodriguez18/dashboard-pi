doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    title Login Page
    // Bootstrap core CSS
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css', rel='stylesheet')
    link(href='css/styles.css', rel='stylesheet')
  body
    .container.vertical-center
      h1.text-center Welcome to !{domain} Domain!
      br
      br
      form.form-signin(role='form', action='/login', method='POST')
        h2.form-signin-heading Please log in
        label.sr-only(for='inputEmail') Email address
        input#inputEmail.form-control(type='email', name='username', placeholder='Email address', required='', autofocus='')
        //br
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='')
        //.checkbox
          label
            input(type='checkbox', value='remember-me')
            |  Remember me
        span.validation !{loginMessage}
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Log in
    // /container
